#!/bin/sh

if [[ $EUID > 0 ]]; then
  echo "Error: please run as root"
  exit 1
fi

mount -o remount,rw /overlay/lower
mount -o remount,rw /boot
mount --bind /boot /overlay/lower/boot

if [ -e /usr/bin/arch-chroot ]
then
  arch-chroot /overlay/lower
else
  echo "Warning: The arch-chroot script is not available."
  chroot /overlay/lower
fi

umount /overlay/lower/boot

echo "The filesystems remain mounted read-write until next reboot."
